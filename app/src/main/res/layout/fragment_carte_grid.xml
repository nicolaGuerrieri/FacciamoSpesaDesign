<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.nicolaguerrieri.facciamospesadesign.CarteFragment">


    <ImageView
        android:id="@+id/immagineNoCarte"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="invisible"
        android:layout_marginRight="5dp"
        android:src="@drawable/frecciatrasparente"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:id="@+id/textNoCarte"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:text="Scansiona la tua carta fedeltÃ  e portala sempre con te"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/immagineNoCarte"
        android:layout_centerHorizontal="true" />

    <GridView
        android:id="@android:id/list"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanCarta"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:columnWidth="150dp"
        android:drawSelectorOnTop="true"
        android:focusable="true"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" />

    <Button
        android:id="@+id/scanCarta"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:text="@string/button_scan" />


</RelativeLayout>
