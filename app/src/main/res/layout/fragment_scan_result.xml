<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scanResult"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />
    <TextView
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:id="@+id/textCodiceScan"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/scanResult"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp" />


    <Spinner
        android:layout_width="240dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/nomeCarta"
        android:hint="Negozio"
        android:entries="@array/negozi"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/salvaImage" />

    <Button
        android:id="@+id/salvaImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="25dp"
        android:background="@drawable/piu_blu"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textCodiceScan" />


</RelativeLayout>