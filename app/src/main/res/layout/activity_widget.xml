<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="top|center"
        android:text="Facciamo spesa"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="top|center"
        android:text="Lista fast"
        android:layout_marginTop="27dp"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:visibility="visible" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/modify"
        android:background="@drawable/modify_blu"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/title"
        android:layout_toStartOf="@+id/refresh"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/refresh"
        android:background="@drawable/refresh_blu"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="130dp"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/modify"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/listViewWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:divider="#000000"
        android:background="@color/white"
        android:layout_toEndOf="@+id/empty_view" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Nessun elemento"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>